generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@127.0.0.1:3306/api"
}

model User {
  id                 String   @id @default(cuid())
  name               String
  password           String
  email              String  @unique
  city               String   @default("Vilnius")
  description        String   @default("Esu treneris...")
  role               String   @default("user")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  requestedToBeCoach Boolean  @default(false)
}

model Session {
  id String @id @default(cuid())
  //coachEmail String
  title String @default("default")
  sport String @default("default")
  city String @default("")
  date String @default("")
  sessionStart String @default("")
  sessionFinish String @default("")
  capacity Int @default(7)
  description String @default("")
  type Boolean @default(false)
  approvable Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}